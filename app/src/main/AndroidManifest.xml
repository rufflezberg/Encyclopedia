<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.russell.encyclopedia" android:installLocation="auto">
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.russell.encyclopedia.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SeeAnimals"></activity>
        <activity android:name=".Information"></activity>
        <activity android:name=".TriviaMain"></activity>
        <activity android:name="com.russell.encyclopedia.TriviaGameOver"></activity>
        <activity android:name="com.russell.encyclopedia.TriviaHelp"></activity>
        <activity android:name="com.russell.encyclopedia.TriviaPlay"></activity>
    </application>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.CAMERA_EXTENDED"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.hardware.camera.autofocus"/>
</manifest>
