<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Game Over!\n"
        android:id="@+id/gameOverText"
        android:textColor="#ffffffff"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/resultsText"
        android:textColor="#ffffffff"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/gameOverText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/scoreText"
        android:textColor="#ffffffff"
        android:layout_below="@+id/resultsImage"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Play Again"
        android:id="@+id/playAgain"
        android:background="@color/material_blue_grey_800"
        android:layout_below="@+id/scoreText" />

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Home"
        android:id="@+id/home"
        android:background="@color/material_blue_grey_800"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/scoreText"
        android:layout_alignTop="@+id/playAgain"
        android:layout_alignParentRight="true" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/resultsImage"
        android:layout_below="@+id/resultsText"
        android:src="@drawable/trivia"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="600dp"
        android:layout_height="200dp"
        android:id="@+id/peoria"
        android:src="@drawable/peoria"
        android:layout_below="@+id/playAgain"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
</ScrollView>