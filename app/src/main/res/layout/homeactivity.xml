<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".HomeActivity"
    android:id="@+id/homeActivityLayout"
    android:background="#ff000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Welcome"
        android:id="@+id/welcomeText"
        android:textColor="#ffffffff"
        android:layout_marginBottom="25dp"
        android:textAlignment="center" />

    <ImageButton
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:id="@+id/seeAnimalsNav"
        android:src="@drawable/pacmanfrog"
        android:clickable="true"
        android:layout_below="@+id/welcomeText"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="150dp"
        android:id="@+id/triviaGameNav"
        android:layout_alignTop="@+id/seeAnimalsNav"
        android:src="@drawable/triviafrog"
        android:clickable="true"
        android:layout_toEndOf="@+id/seeAnimalsNav"
        android:layout_toRightOf="@+id/seeAnimalsNav" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Brought to you by: Russell \'Ruffle\' Erickson\nInformation from: https://www.aza.org/frogs-in-illinois/"
        android:id="@+id/signOff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffffff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Frog_View"
        android:id="@+id/seeAnimalsNavText"
        android:textColor="#ffffffff"
        android:layout_below="@+id/seeAnimalsNav"
        android:layout_toStartOf="@+id/triviaGameNav"
        android:layout_toLeftOf="@+id/triviaGameNav" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Trivia_Image"
        android:id="@+id/triviaNavText"
        android:layout_below="@+id/triviaGameNav"
        android:layout_alignStart="@+id/triviaGameNav"
        android:layout_alignEnd="@+id/triviaGameNav"
        android:textColor="#ffffffff"
        android:layout_alignLeft="@+id/triviaGameNav"
        android:layout_alignRight="@+id/triviaGameNav" />

    <ImageButton
        android:layout_width="700dp"
        android:layout_height="100dp"
        android:id="@+id/lincolnPark"
        android:layout_below="@+id/seeAnimalsNavText"
        android:src="@drawable/lincoln"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="65dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PhotoRecognitionActivity"
        android:layout_below="@+id/lincolnPark"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>
